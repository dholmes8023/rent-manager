<%- include('partials/top', { title: 'Danh sách phòng' }) %>
<h1 class="text-xl font-semibold mb-4">Danh sách phòng</h1>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <% rooms.forEach(r => { %>
    <a href="/rooms/<%= r.id %>" class="block rounded-xl border bg-white p-4 hover:shadow">
      <div class="flex items-center justify-between">
        <div class="text-lg font-medium"><%= r.name %></div>
        <% if (r.tenant) { %>
          <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-50 text-emerald-700 border border-emerald-200">Đã có người</span>
        <% } else { %>
          <span class="text-xs px-2 py-0.5 rounded-full bg-amber-50 text-amber-700 border border-amber-200">Phòng trống</span>
        <% } %>
      </div>
      <div class="text-sm text-slate-500"><%= r.note || "" %></div>
      <div class="mt-2 text-sm">
        Người thuê: <b><%= r.tenant || "—" %></b>
      </div>
    </a>
  <% }) %>
</div>
<%- include('partials/bottom') %>