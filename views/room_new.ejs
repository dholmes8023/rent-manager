<%- include('partials/top', { title: 'Thêm phòng mới' }) %>
<h1 class="text-xl font-semibold mb-4">Thêm phòng mới</h1>
<form method="POST" action="/rooms" class="bg-white border rounded-xl p-4 grid md:grid-cols-3 gap-4">
  <label class="text-sm">Tên phòng
    <input name="name" required class="input" placeholder="VD: P301" />
  </label>
  <label class="text-sm md:col-span-2">Ghi chú
    <input name="note" class="input" placeholder="Số người, ghi chú khác" />
  </label>

  <div class="md:col-span-3 font-medium mt-2 mb-1">Đơn giá & phí</div>
  <label class="text-sm">Tiền phòng (đ/tháng)
    <input type="number" name="rent" class="input" required value="3200000" />
  </label>
  <label class="text-sm">Mạng (đ/tháng)
    <input type="number" name="internet_fee" class="input" required value="100000" />
  </label>
  <label class="text-sm">Vệ sinh (đ/tháng)
    <input type="number" name="cleaning_fee" class="input" required value="40000" />
  </label>
  <label class="text-sm">Đơn giá điện (đ/kWh)
    <input type="number" name="electricity_price" class="input" required value="4500" />
  </label>
  <label class="text-sm">Đơn giá nước (đ/m³)
    <input type="number" name="water_price" class="input" required value="35000" />
  </label>

  <div class="md:col-span-3">
    <button class="px-4 py-2 rounded-lg bg-slate-900 text-white">Tạo phòng</button>
    <a href="/" class="ml-2 px-4 py-2 rounded-lg border">Huỷ</a>
  </div>
</form>
<%- include('partials/bottom') %>